{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/health", "dest": "api/index.py" },
    { "src": "/agents", "dest": "api/index.py" },
    { "src": "/run",    "dest": "api/index.py" },
    { "src": "/(.*)",   "dest": "/$1" }
  ]
}
